<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.gentics</groupId>
		<artifactId>demoportal</artifactId>
		<version>1.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>demoportal-config</artifactId>
	<!-- Unfortunately the project must be of type jar. Otherwise m2e will not
		invoke any configured goals -->
	<packaging>jar</packaging>

	<name>[Demo Portal] Configuration</name>
	<description>The configuration files for Gentics Portal.Node and utility stuff regarding eclipse IDE integration</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyyMMdd-HHmmss</maven.build.timestamp.format>
	</properties>

	<repositories>
		<repository>
			<id>maven.gentics.com</id>
			<name>Gentics Central Repository</name>
			<url>http://maven.gentics.com/maven2</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<build>
		<!-- The inherited portalnode-config profile will automatically be activated
			and take care for building the configuration files -->
	</build>
</project>