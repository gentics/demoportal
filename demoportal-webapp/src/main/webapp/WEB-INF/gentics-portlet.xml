	<portlet>
		<portlet-name>GenticsLoginModule</portlet-name>
		<parameter-description>
			<parameter-definition name="passwordregex" type="string">
				password regular expression, validating the passwords
			</parameter-definition>
			<parameter-definition name="loginregex" type="string">
				user id regular expression
			</parameter-definition>
			<parameter-definition name="passworddescription"
				type="string">
				dictionary code for error in password
			</parameter-definition>
			<parameter-definition name="logindescription"
				type="string">
				dictionary code for error in user
			</parameter-definition>
			<parameter-definition name="defaultlogin" type="string">
				init value of the user field
			</parameter-definition>
		</parameter-description>
		<templates>
			<template id="main">
				<source><![CDATA[
$form
		]]></source>
			</template>
			<template id="loggedin">
				<source><![CDATA[
#set($welcome = $portal.i18n("login.welcome"))##
$welcome.setParameter("firstname", $user.firstname)##
#set ($hash = $portal.imps.string.md5("$!user.email"))##
<img src="http://www.gravatar.com/avatar/$hash?s=47" alt="$user.firstname $user.lastname" title="$user.firstname $user.lastname" />
<h1>$welcome</h1>
<a href="$logouturl">$portal.i18n("login.logout")</a>
<br /><br />
			]]></source>
			</template>
		</templates>
	</portlet>
